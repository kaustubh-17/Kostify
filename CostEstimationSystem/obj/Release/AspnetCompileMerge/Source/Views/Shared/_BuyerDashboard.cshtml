<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Scrum Team 3</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Dashboard.css" rel="stylesheet" />
    <link href="~/Content/Navbar.css" rel="stylesheet" />
    <style>
        #customNav {
            background-color: black !important;
        }

        .nav-item a {
            color: lightgray;
        }

            .nav-item a:hover {
                color: greenyellow
            }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--GOOGLE FONTS-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Play&display=swap" rel="stylesheet">
</head>
<body background="~/images/download.jfif">
    <nav style="height:55px" id="customNav" class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid" style="color:gray">
            <a style="font-family: 'Play', sans-serif; color: white; font-size: 0.8rem; text-align: left; margin-top: 4px; margin-left: 10px" class="navbar-brand" href="#"><h4><b>Kostify</b></h4></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul style="color:gray; margin-left: 650px; font-family: 'Play', sans-serif;" class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" onclick="location.href='@Url.Action("Estimate","Buyer")'">Estimator</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" onclick="location.href='@Url.Action("MyOrders","Buyer")'">My Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" onclick="location.href='@Url.Action("Logoff","Account")'">Log Out</a>
                    </li>

                </ul>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        <center>
            @RenderBody()
        </center>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cost Estimation System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

   
</body>
</html>
