/*6*/
    .btn-6 {

        background: linear-gradient(0deg, rgba(0,172,238,1) 0%, rgba(2,126,251,1) 100%);

        line-height: 42px;
        padding: 0;
        border: none;
    }

        .btn-6 span {
            position: relative;
            display: block;
            width: 100%;
            height: 100%;
        }

        .btn-6:before,
        .btn-6:after {
            position: absolute;
            content: "";
            right: 0;
            bottom: 0;
            background: rgba(2,126,251,1);
            box-shadow: -7px -7px 20px 0px rgba(255,255,255,.9), -4px -4px 5px 0px rgba(255,255,255,.9), 7px 7px 20px 0px rgba(0,0,0,.2), 4px 4px 5px 0px rgba(0,0,0,.3);
            transition: all 0.3s ease;
        }

        .btn-6:before {
            height: 0%;
            width: 2px;
        }

        .btn-6:after {
            width: 0%;
            height: 2px;
        }

        .btn-6:hover {
            color: rgba(2,126,251,1);
            background: #fff;
        }

            .btn-6:hover:before {
                height: 100%;
            }

            .btn-6:hover:after {
                width: 100%;
            }

        .btn-6 span:before,
        .btn-6 span:after {
            position: absolute;
            content: "";
            left: 0;
            top: 0;
            background: rgba(2,126,251,1);
            box-shadow: -7px -7px 20px 0px rgba(255,255,255,.9), -4px -4px 5px 0px rgba(255,255,255,.9), 7px 7px 20px 0px rgba(0,0,0,.2), 4px 4px 5px 0px rgba(0,0,0,.3);
            transition: all 0.3s ease;
        }

        .btn-6 span:before {
            width: 2px;
            height: 0%;
        }

        .btn-6 span:after {
            height: 2px;
            width: 0%;
        }

        .btn-6 span:hover:before {
            height: 100%;
        }

        .btn-6 span:hover:after {
            width: 100%;
